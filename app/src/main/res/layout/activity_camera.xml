    android:layout_height="match_parent">

    <com.game.test.camera.CameraTextureView
        android:id="@+id/camera_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/take_pic_iv"
